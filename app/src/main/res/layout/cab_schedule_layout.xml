<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/cabLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.app.cabscout.model.custom.CustomTextViewRegular
                android:id="@+id/pickupAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pickup Location"
                android:padding="15dp"
                android:drawableLeft="@drawable/ic_icon_location"
                android:drawableStart="@drawable/ic_icon_location"
                android:drawablePadding="20dp"
                style="?android:attr/textAppearanceSmall"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <com.app.cabscout.model.custom.CustomTextViewRegular
                android:id="@+id/destinationAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Destination"
                android:padding="15dp"
                android:drawableLeft="@drawable/ic_icon_destination"
                android:drawableStart="@drawable/ic_icon_destination"
                android:drawablePadding="20dp"
                style="?android:attr/textAppearanceSmall"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <com.app.cabscout.model.custom.CustomTextViewBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15 km"
                        android:drawableLeft="@drawable/ic_icon_distance"
                        android:drawableStart="@drawable/ic_icon_distance"
                        android:drawablePadding="2dp"
                        android:textColor="#000000"
                        style="?android:attr/textAppearanceSmall"/>

                    <com.app.cabscout.model.custom.CustomTextViewRegular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Distance"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <com.app.cabscout.model.custom.CustomTextViewBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00:20"
                        android:drawableLeft="@drawable/ic_icon_time"
                        android:drawableStart="@drawable/ic_icon_time"
                        android:drawablePadding="2dp"
                        android:textColor="#000000"
                        style="?android:attr/textAppearanceSmall"/>

                    <com.app.cabscout.model.custom.CustomTextViewRegular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <com.app.cabscout.model.custom.CustomTextViewBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$10"
                        android:drawableLeft="@drawable/ic_icon_price"
                        android:drawableStart="@drawable/ic_icon_price"
                        android:drawablePadding="2dp"
                        android:textColor="#000000"
                        style="?android:attr/textAppearanceSmall"/>

                    <com.app.cabscout.model.custom.CustomTextViewRegular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price"/>
                </LinearLayout>

            </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:layout_gravity="center">

                        <com.app.cabscout.model.custom.CustomTextViewBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Promocode"
                            android:textColor="#000000"
                            style="?android:attr/textAppearanceSmall"/>

                        <com.app.cabscout.model.custom.CustomTextViewRegular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NONE"/>

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/darker_gray"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:layout_gravity="end"
                        android:gravity="end">

                        <com.app.cabscout.model.custom.CustomTextViewBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Payment"
                            android:textColor="#000000"
                            style="?android:attr/textAppearanceSmall"/>

                        <com.app.cabscout.model.custom.CustomTextViewRegular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cash"/>
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"/>

                <com.app.cabscout.model.custom.CustomTextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/promo_code_note"
                    android:textAllCaps="true"
                    android:textSize="12sp"
                    android:padding="10dp"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="10dp">

        <com.app.cabscout.model.custom.CustomTextViewRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Book Ride"
            android:gravity="center"
            android:textColor="#000000"
            android:textAllCaps="false"
            android:background="@color/colorPrimary"
            android:padding="10dp"/>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</RelativeLayout>